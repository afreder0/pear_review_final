<div class="page-header">
  <h1>
    Dishings
    <a href="/dishings/new" class="btn btn-lg btn-success">New Dishing</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Restaurant</th>
        <th>Dish</th>
        <th>Actions</th>
      </tr>

      <% @dishings.each do |dishing| %>
      <tr>
        <td><%= dishing.restaurant_id %></td>
        <td><%= dishing.dish_id %></td>
        <td>
          <a href="/dishings/<%= dishing.id %>" class="btn btn-primary">Show</a>
          <a href="/dishings/<%= dishing.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_dishing/<%= dishing.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
