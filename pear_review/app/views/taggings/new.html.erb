<!-- Validation failure messages -->
<% if @tagging.errors.any? %>
  <% @tagging.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Tagging</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_tagging" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for tag_id -->
      <div class="form-group">
        <label for="tag_id" class="control-label">
          Tag
        </label>

        <input type="text" id="tag_id" name="tag_id" placeholder="Tag" class="form-control" value="<%= @tagging.tag_id %>">
      </div>

      <!-- Label and input for dishing_id -->
      <div class="form-group">
        <label for="dishing_id" class="control-label">
          Dishing
        </label>

        <input type="text" id="dishing_id" name="dishing_id" placeholder="Dishing" class="form-control" value="<%= @tagging.dishing_id %>">
      </div>

      <button class="btn btn-success">
        Create Tagging
      </button>
      or
      <a href="/taggings">Cancel</a>
    </form>
  </div>
</div>
