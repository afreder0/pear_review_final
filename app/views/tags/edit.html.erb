<!-- Validation failure messages -->
<% if @tag.errors.any? %>
  <% @tag.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Tag #<%= @tag.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_tag/<%= @tag.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for tag_name -->
      <div class="form-group">
        <label for="tag_name" class="control-label">
          Tag name
        </label>

        <input type="text" id="tag_name" name="tag_name" placeholder="Tag name" class="form-control" value="<%= @tag.tag_name %>">
      </div>

      <button class="btn btn-warning">
        Update Tag
      </button>
      or
      <a href="/tags/<%= @tag.id %>">Cancel</a>
    </form>
  </div>
</div>
