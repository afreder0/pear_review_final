<div class="page-header">
  <h1>
Most Popular Dishes
<% if current_user.present? %><a href="/favorites/new" class="btn btn-lg btn-success">New Favorite</a>
    <% end %>
  </h1>
</div>
<p>
  To Add: 1. Sort by most popular Dist 2. List most popular restaurant
</p>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <!-- <th>Dish comment</th> -->
        <th>Dish</th>
        <th>Restaurant</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @favorites.each do |favorite| %>
      <tr>
        <!-- <td><%= favorite.dish_comment %></td> -->
        <td><%= Dish.find(favorite.dishing_id).dish_name %></td>
        <% d = Dishing.find(favorite.dishing_id) %>
        <td><%= Restaurant.find(d.restaurant_id).name %></td>
        <td><%= User.find(favorite.user_id).email %></td>

        <td>
          <a href="/favorites/<%= favorite.id %>" class="btn btn-primary">Show</a>
          <a href="/favorites/<%= favorite.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_favorite/<%= favorite.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
