<div class="page-header">
  <h3>Restaurant #<%= @restaurant.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <!-- <dt>Cover image</dt> -->
      <dd><img src="<%= @restaurant.cover_image %>" alt="" /></dd>

      <dt>Name</dt>
      <dd><%= @restaurant.name %></dd>

      <% if @restaurant.street.present? %>
      <dt>Street</dt>
      <dd><%= @restaurant.street %></dd>
          <% end %>

          <% if @restaurant.neighborhood.present? %>
          <dt>Neighborhood</dt>
          <dd><%= @restaurant.neighborhood %></dd>
              <% end %>

              <% if @restaurant.city.present? %>
              <dt>City</dt>
              <dd><%= @restaurant.city %></dd>
                  <% end %>

      <dt>State</dt>
      <dd><%= @restaurant.state %></dd>

      <% if @restaurant.zip.present? %>
      <dt>Zip</dt>
      <dd><%= @restaurant.zip %></dd>
          <% end %>

          <% if @restaurant.short_description.present? %>
          <dt>Description</dt>
          <dd><%= @restaurant.short_description %></dd>
              <% end %>

      <!-- <dt>Lng</dt>
      <dd><%= @restaurant.lng %></dd>

      <dt>Lat</dt>
      <dd><%= @restaurant.lat %></dd> -->
      <% if @restaurant.price.present? %>
      <dt>Price</dt>
      <dd><%= @restaurant.price %></dd>
          <% end %>


<p>
  To Add:
  1. Add a dish (add dishing)
  2. See current dishes and popularith 
</p>











    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/restaurants" class="btn btn-primary">
        Back
      </a>
      <a href="/restaurants/<%= @restaurant.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_restaurant/<%= @restaurant.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
