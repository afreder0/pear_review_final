<div class="page-header">
  <h3>Menu Record #<%= @dishing.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Restaurant</dt>
      <dd><%= Restaurant.find(@dishing.restaurant_id).name %></dd>

      <dt>Dish</dt>
      <dd><%= Dish.find(@dishing.dish_id).dish_name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/dishings" class="btn btn-primary">
        Back
      </a>
      <a href="/dishings/<%= @dishing.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_dishing/<%= @dishing.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
